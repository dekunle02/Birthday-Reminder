<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BirthdayReminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navyblue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/navyblue</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/eggwhite</item>

    </style>

    <!--    Activity and Application Themes-->
    <style name="Theme.BirthdayReminder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DetailPageToolbar">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>
  <style name="HomePageToolbar">
        <item name="colorControlNormal">@color/teal</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>


    <style name="Theme.BirthdayReminder.SplashScreen" parent="Theme.BirthdayReminder.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

<!--    Toolbar-->
    <style name="DarkAppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>


    <!--    BUTTONS-->
    <style name="ButtonTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/bodytext</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="ContinueButton" parent="Widget.MaterialComponents.Button">
        <item name="icon">@drawable/ic_arrow_forward</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="backgroundTint">@color/teal</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto</item>
        <item name="backgroundTint">@color/teal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GoogleButton" parent="Widget.MaterialComponents.Button">
        <item name="icon">@drawable/ic_google</item>
        <item name="iconTint">@color/teal</item>
        <item name="iconGravity">start</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/teal</item>
    </style>

    <style name="AlternateSignInButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="addFAB" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/yellow</item>
        <item name="tint">@color/navyblue</item>
    </style>

    <style name="editFab" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/yellow</item>
        <item name="tint">@color/navyblue</item>
    </style>

    <style name="otherButtons" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="iconTint">@color/navyblue</item>
        <item name="android:textColor">@color/navyblue</item>
    </style>

    <style name="ProfilePageButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/teal</item>
        <item name="iconPadding">@dimen/major_margin</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <!--   TEXTS-->
    <style name="EditTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/subtext</item>
    </style>

    <style name="TextViewProfile" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/subtext</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAppearance">@style/EditTextAppearance</item>
    </style>

    <style name="AuthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/shape_box</item>
        <item name="android:padding">@dimen/minor_mini_margin</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAppearance">@style/EditTextAppearance</item>
    </style>

    <style name="EditBirthdayTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/teal</item>
    </style>

    <style name="AppBarText" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/navyblue</item>
    </style>

    <style name="DetailHeader" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/teal</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextViewNoContent">
        <item name="android:textStyle">italic</item>
        <item name="alpha">0.5</item>
    </style>



    <!--    CARDS-->
    <style name="BirthdayCardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="backgroundTint">@color/white</item>
    </style>

<!--    Widgets -->
    <style name="CircularImageView" >
        <item name="cornerSize">50%</item>
    </style>


</resources>